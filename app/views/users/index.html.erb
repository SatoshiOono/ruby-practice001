<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<div>
<%= form_tag(users_path, method: "get") do %>
<%= label_tag :name, "名前" %><%= text_field_tag :name, params[:name] %>
<%= label_tag :name, "性別" %>
<%= select_tag :gender, options_for_select(User.genders), include_blank: true %>
<%= label_tag :hometown, "出身地" %><%= text_field_tag :hometown, params[:hometown] %>
<%= submit_tag "検索" %>
<% end %>
</div>

<div>
  <%= link_to "ユーザーの新規登録", new_user_path %>
</div>

<table>
<thead>
<tr>
<th>名前</th>
<th>性別</th>
<th>誕生日</th>
<th>出身</th>
<th>ひとこと</th>
</tr>
</thead>
<tbody>
<% @users.each do |user| %>
<tr>
  <td><%= link_to user.name, user_path(user) %></td>
  <td><%= user.gender %></td>
  <td><%= user.birthday %></td>
  <td><%= user.hometown %></td>
  <td><%= user.remarks %></td>
  <td><%= link_to "編集", edit_user_path(user) %></td>
  <td><%= link_to "削除", user_path(user), :method => :delete %></td>
</tr>
</tbody>
<% end %>
</table>
<%= paginate @users %>